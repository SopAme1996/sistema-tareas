<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}{% endblock %}</title>
        {% block stylesheets %}
            <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
            <link rel="stylesheet" href="{{ asset('asset/style.css')  }}">
        {% endblock %}
    </head>
    <body>
        <header>
            {% block cabecera %}
            <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
                <div class="container">
                    <a class="navbar-brand" href="{{ path('home') }}">HomeWork</a>
                        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarScroll" aria-controls="navbarScroll" aria-expanded="false" aria-label="Toggle navigation">
                            <span class="navbar-toggler-icon"></span>
                        </button>
                            <div class="collapse navbar-collapse" id="navbarScroll">
                                <ul class="navbar-nav me-auto my-2 my-lg-0 navbar-nav-scroll" style="--bs-scroll-height: 100px;">

                                {% if app.user %}
                                    <li class="nav-item">
                                        <a class="nav-link active" aria-current="page" href="{{ path('task-create') }}">Crear tarea</a>
                                    </li>

                                    <li class="nav-item dropdown">
                                        <a class="nav-link dropdown-toggle" href="#" id="navbarScrollingDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                                {{ app.user.name }} {{ app.user.surname }}
                                        </a>
                                            <ul class="dropdown-menu" aria-labelledby="navbarScrollingDropdown">
                                                <li><a class="dropdown-item" href="{{ path('modificar-perfil', {'id': app.user.id}) }}">Modificar perfil</a></li>
                                                <li><a class="dropdown-item" href="#">Eliminar perfil</a></li>
                                                <li><hr class="dropdown-divider"><a class="dropdown-item" href="{{ path('logout') }}">Cerrar Sesion</a></li>
                                            </ul>
                                    </li>
                                {% else %}
                                    <li class="nav-item">
                                        <a class="nav-link active" aria-current="page" href="{{ path('login') }}">Login</a>
                                    </li>

                                    <li class="nav-item">
                                        <a class="nav-link active" aria-current="page" href="{{ path('register') }}">Registro</a>
                                    </li>
                                 {% endif %}
                                </ul>
                            </div>
                        </div>
                    </nav>
            {% endblock %}
        </header>

        <section class="message container">
            {% block mensajes %}
            {#{ titulo, logo o menu }#}
            {% endblock %}
        </section>

         <section class="container mt-5">
            {% block container %}
            {#{ titulo, logo o menu }#}
            {% endblock %}
        </section>

         <footer>
            {% block footer %}
            {#{ titulo, logo o menu }#}
            {% endblock %}
        </footer>

        {% block javascripts %}
            <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js" integrity="sha384-IQsoLXl5PILFhosVNubq5LC7Qb9DXgDA9i+tQ8Zj3iwWAwPtgFTxbJ8NT4GN1R8p" crossorigin="anonymous"></script>
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js" integrity="sha384-cVKIPhGWiC2Al4u+LWgxfKTRIcfu0JTxR+EQDz/bgldoEyl4H0zUF0QKbrJ0EcQF" crossorigin="anonymous"></script>

            <script src='https://kit.fontawesome.com/66f5e943e2.js' crossorigin='anonymous'></script>

            <script src="{{ asset('js/validacion.js') }}"></script>
        {% endblock %}
    </body>
</html>
